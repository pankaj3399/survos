{
    "license": "proprietary",
    "name": "survos/mono",
    "description": "mono-repo for survos bundles and demos test",
    "authors": [
        {
            "name": "Tac Tacelosky",
            "email": "tacman@gmail.com"
        }
    ],
    "type": "project",
    "require": {
        "php": "^8.1",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "fakerphp/faker": "^1.20",
        "symfony/config": "^6.1.0",
        "symfony/console": "^6.1.0",
        "symfony/dependency-injection": "^6.1.0",
        "symfony/dotenv": "^6.1.0",
        "symfony/flex": "^2",
        "symfony/framework-bundle": "^6.1.0",
        "symfony/http-kernel": "^6.1.0",
        "symfony/runtime": "^6.1.0",
        "symfony/yaml": "^6.1.0",
        "twig/twig": "^3.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "symplify/monorepo-builder": "^11.1"
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Survos\\FakerBundle\\": "packages/faker-bundle/src/",
            "Survos\\FirstPackage\\": "packages/first-package/src",
            "Survos\\SecondPackage\\": "packages/second-package/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "mono-demo/faker-bundle": "5.4.2",
        "mono-demo/first-package": "5.4.2",
        "survos/faker-bundle": "self.version",
        "survos/first-package": "self.version",
        "survos/second-package": "self.version"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "require": "^6.1.0",
            "allow-contrib": false
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
